<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="root"
      alignment="CENTER"
      spacing="20"
      prefWidth="420"
      prefHeight="430"
      style="-fx-background-color: #F2F2F2;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Botones principales -->
    <Button text="Crear Asignatura"
            fx:id="btnCrearAsignatura"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #7B61FF;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 260px;
                -fx-min-height: 50px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8, 0, 2, 2);
            "
    />

    <Button text="Crear Clase"
            fx:id="btnCrearClase"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #7B61FF;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 260px;
                -fx-min-height: 50px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8, 0, 2, 2);
            "
    />

    <Button text="Agregar Clase Profesor"
            fx:id="btnAgregarClaseProfesor"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #7B61FF;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 260px;
                -fx-min-height: 50px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8, 0, 2, 2);
            "
    />

    <Button text="Crear Nómina de Profesores"
            fx:id="btnCrearNominaProfesores"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #7B61FF;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 260px;
                -fx-min-height: 50px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8, 0, 2, 2);
            "
    />

    <!-- Botón regresar -->
    <Button text="Volver"
            fx:id="btnVolver"
            style="
                -fx-font-size: 16px;
                -fx-background-color: #CCCCCC;
                -fx-text-fill: black;
                -fx-background-radius: 15px;
                -fx-min-width: 200px;
                -fx-min-height: 40px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0, 1, 1);
            "
    />

</VBox>
