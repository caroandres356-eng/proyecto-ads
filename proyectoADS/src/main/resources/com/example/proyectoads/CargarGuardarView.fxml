<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800"
            prefHeight="450"
            style="-fx-background-color: #F2F2F2;">

    <!-- CONTENIDO CENTRAL -->
    <center>
        <HBox alignment="CENTER"
              spacing="40">

            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- COLUMNA IZQUIERDA -->
            <VBox spacing="20" alignment="CENTER">
                <Button text="Cargar JSON"
                        fx:id="btnCargarJSON"
                        style="-fx-font-size: 18px;
                               -fx-background-color: #3A7FD5;
                               -fx-text-fill: white;
                               -fx-background-radius: 15px;
                               -fx-min-width: 250px;
                               -fx-min-height: 50px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);" />

                <Button text="Cargar CSV"
                        fx:id="btnCargarCSV"
                        style="-fx-font-size: 18px;
                               -fx-background-color: #2EC4B6;
                               -fx-text-fill: white;
                               -fx-background-radius: 15px;
                               -fx-min-width: 250px;
                               -fx-min-height: 50px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);" />

                <Button text="Cargar JAVA"
                        fx:id="btnCargarJAVA"
                        style="-fx-font-size: 18px;
                               -fx-background-color: #6C63FF;
                               -fx-text-fill: white;
                               -fx-background-radius: 15px;
                               -fx-min-width: 250px;
                               -fx-min-height: 50px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);" />
            </VBox>

            <!-- COLUMNA DERECHA -->
            <VBox spacing="20" alignment="CENTER">
                <Button text="Guardar JSON"
                        fx:id="btnGuardarJSON"
                        style="-fx-font-size: 18px;
                               -fx-background-color: #3A7FD5;
                               -fx-text-fill: white;
                               -fx-background-radius: 15px;
                               -fx-min-width: 250px;
                               -fx-min-height: 50px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);" />

                <Button text="Guardar CSV"
                        fx:id="btnGuardarCSV"
                        style="-fx-font-size: 18px;
                               -fx-background-color: #2EC4B6;
                               -fx-text-fill: white;
                               -fx-background-radius: 15px;
                               -fx-min-width: 250px;
                               -fx-min-height: 50px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);" />

                <Button text="Guardar JAVA"
                        fx:id="btnGuardarJAVA"
                        style="-fx-font-size: 18px;
                               -fx-background-color: #6C63FF;
                               -fx-text-fill: white;
                               -fx-background-radius: 15px;
                               -fx-min-width: 250px;
                               -fx-min-height: 50px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);" />
            </VBox>

        </HBox>
    </center>

    <!-- BOTÃ“N INFERIOR CENTRADO -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button text="Volver"
                    fx:id="btnVolver"
                    style="-fx-font-size: 18px;
                           -fx-background-color: #779ECB;
                           -fx-text-fill: white;
                           -fx-background-radius: 15px;
                           -fx-min-width: 200px;
                           -fx-min-height: 45px;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);" />
        </HBox>
    </bottom>

</BorderPane>
