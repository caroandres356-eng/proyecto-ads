<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="400"
      style="-fx-background-color: #F2F2F2;">

    <!-- Padding corregido (OpciÃ³n B) -->
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Button text="Estudiante"
            fx:id="btnEstudiante"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #4A90E2;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 250px;
                -fx-min-height: 50px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);
            " />

    <Button text="Administrativo"
            fx:id="btnAdministrativo"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #4A90E2;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 250px;
                -fx-min-height: 50px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);
            " />

    <Button text="Cargar/Guardar Archivos"
            fx:id="btnCargarGuardar"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #4A90E2;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 250px;
                -fx-min-height: 50px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 2);
            " />

</VBox>
