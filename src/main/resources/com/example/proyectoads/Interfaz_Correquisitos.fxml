<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER"
      spacing="20"
      prefWidth="450"
      prefHeight="380"
      style="-fx-background-color: linear-gradient(to bottom, #f7f7ff, #ececff);
             -fx-padding: 30;">

    <!-- TÍTULO -->
    <Label text="Consultar Correquisitos"
           style="
                -fx-font-size: 24px;
                -fx-font-weight: bold;
                -fx-text-fill: #4A4A8A;
           " />

    <!-- CAMPO: DEPARTAMENTO -->
    <TextField fx:id="txtDepartamento"
               promptText="Código del departamento"
               style="
                    -fx-font-size: 16px;
                    -fx-padding: 10;
                    -fx-background-radius: 10;
                    -fx-border-radius: 10;
                    -fx-border-color: #B5B5FF;
                    -fx-border-width: 1.2;
               "
               prefWidth="300"/>

    <!-- CAMPO: ASIGNATURA -->
    <TextField fx:id="txtAsignatura"
               promptText="Código de asignatura"
               style="
                    -fx-font-size: 16px;
                    -fx-padding: 10;
                    -fx-background-radius: 10;
                    -fx-border-radius: 10;
                    -fx-border-color: #B5B5FF;
                    -fx-border-width: 1.2;
               "
               prefWidth="300"/>

    <!-- BOTÓN CONSULTAR -->
    <Button text="Consultar"
            onAction="#onActionConsultar"
            style="
                -fx-font-size: 18px;
                -fx-background-color: #7B61FF;
                -fx-text-fill: white;
                -fx-background-radius: 15px;
                -fx-min-width: 250px;
                -fx-min-height: 45px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 2, 2);
            " />

    <!-- BOTÓN VOLVER -->
    <Button text="Volver"
            fx:id="btnVolver"
            onAction="#onActionVolver"
            style="
                -fx-font-size: 16px;
                -fx-background-color: #C2C2C2;
                -fx-text-fill: #333;
                -fx-background-radius: 12px;
                -fx-min-width: 200px;
                -fx-min-height: 40px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 1, 2);
            " />

</VBox>
